{{input type="checkbox" id=(concat elementId '-cb')
  checked=_checked
  disabled=disabled
  tabindex=tabindex
  indeterminate=indeterminate
  name=name
  autofocus=autofocus
  form=form
  class=cbClass
}}
<label for={{concat elementId '-cb'}}>{{{label}}} {{yield}}</label>
{{#if (get changeset.error property)}}
<div>
  <label class="error" style="list-style:none">
    {{#each (get (get changeset.error property) 'validation') as |error|}}
      <li>
        {{error}}
      </li>
    {{/each}}
  </label>
</div>
{{/if}}
